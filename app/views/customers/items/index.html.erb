<div class="container">
  <div class="row">
    <h1 class ="title">商品一覧</h1>
  </div>
  <div class="row">
    <div class="search-form">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="post-list">
      <% @items.each do |item| %>
        <%= item.name %>
      <% end %>
    </div>
  </div>


        
            
        
      <div class ="row">
        <% @items.each do |item| %>
          <div class ="col mt-5">
            <div class="card" style="width:300px">
              <%= link_to  item_path(item.id) do %>
                <%= attachment_image_tag item, :image,:fill, 200, 200, fallback: "no_image.jpeg", class:"card-img-top" %>
              <% end %>
            <div class="card-body">
              <h3 class="item_name"><%= item.name %></h3>
              <p class ="price"><%= item.price %></p>
              <% if item.is_active == true %>
              <p>販売中</p>
              <% else %>
              <p>販売停止中</p>
              <% end %>
            </div>
          </div>
        </div>
　      <% end %>
      </div>

        


<%= paginate @items %>
    </div>
