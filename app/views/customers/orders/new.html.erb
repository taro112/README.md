<%= form_with model: @order, url: orders_verification_path, method: :post, local:true do |f| %>
<h1 class ="title">支払い方法</h1>
<div class ="customer_pay">
    <%= f.radio_button :payment_method, "credit_card" %>
    <%= f.label :payment_method, "クレジットカード" %>
</div>
<div class ="customer_pay">
    <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method, "銀行振込" %>
</div>

<div class ="customer_address">
<%= f.radio_button :select_address, 1 %>
<%= f.label :select_address, "ご自身の住所", { style: "display: inline-block;"} %>
<%= current_customer.postal_code %>
<%= current_customer.address %>
<%= current_customer.last_name + current_customer.first_name %>
</div>
<div class ="customer_address">
<%= f.radio_button :select_address, 2 %>
<%= f.label :select_address, "登録済みの住所", { style: "display: inline-block;"} %>
<%= f.collection_select :concatenate_address, @addresses, :id, :concatenate_address%>
</div>
<div class ="customer_address">
<%= f.radio_button :select_address, 3 %>
<%= f.label :select_address, "新しい住所", { style: "display: inline-block;"} %>
<%= f.text_field :postal_code %>
<%= f.text_field :address %>
<%= f.text_field :name %>
</div>
<div class ="confirmation">
    <%= f.submit '確認画面に進む' %>
</div>
<% end %>