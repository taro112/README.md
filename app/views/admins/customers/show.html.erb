
<h1 class= "title"><%= @customer.first_name+@customer.last_name %>さんの会員詳細</h1>

<table class="admins_customer_show_table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%= @customer.first_name %></td>
      <td><%= @customer.last_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.first_name_kana %></td>
      <td><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
    <tr>
        <th>会員ステータス</th>
        <td><% if @customer.is_deleted == true %>
      　<p>退会</p>
      　<% else %>
      　<p>有効</p>
      　<% end %>
      　</td>
    </tr>
  </tbody>
</table>

<div class ="admins_customer_link">
<%= link_to "編集する", edit_admins_customer_path(@customer.id) %>
<%= link_to "注文履歴一覧を見る", admin_path %>
</div>