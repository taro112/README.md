<h1 class ="title">注文履歴詳細</h1>

<table class="order_show">
  <thead>
    <tr>
      <th>購入者</th>
      <th></th>
      <th><%= @order.name %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>注文日</th>
      <td></td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td></td>
      <td><%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %>
       </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td></td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
  </tbody>
</table>


<div class="container">  
  <div class="row">  
  <div class="col-lg-8">
<table class="table table-borderless">
  <thead>
    <tr>
      <th>商品名</th>
      <th></th>
      <th>単価（税込）</th>
      <th></th>
      <th>数量</th>
      <th></th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
    <tr>
      <th><%= order_detail.item.name %></th>
      <td></td>
      <td><%= order_detail.price %></td>
      <th></th>
      <td><%= order_detail.amount %></td>
      <td></td>
      <th><%= order_detail.subtotal %></th>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
 </div>
  
 <div class="col-lg-4"> 
<table class="table table-borderless">
  <thead>
    <tr>
      <th>商品合計</th>
      <th></th>
      <th><%= @sum %></th>
      
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>送料</th>
      <td></td>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td></td>
      <td><%= @sum += @order.shipping_cost  %></td>
    </tr>
  </tbody>
</table>
</div>
</div>  
</div>  